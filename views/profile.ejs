<article>
  <section>
    <% if (isLoggedIn) { %>
    <h1>Hello, <%= username %>!</h1>
    <% } else { %>
    <h1>Hello, user!</h1>
    <% } %>
  </section>

  <section>
    <h2>Log out</h2>
    <p>Click here to log out.</p>
    <% if (isLoggedIn) { %>
    <form action="/logout" method="post">
      <button class="button_whiteborder2" type="submit">Log out</button>
    </form>
    <% } %>
  </section>

  <section>
    <h2>Gebruikersnaam veranderen</h2>
    <form action="/user/update-username" method="POST">
      <input type="text" name="newUsername" placeholder="Username" required />
      <button class="button_whiteborder2" type="submit">Save</button>
    </form>
  </section>

  <section>
    <h2>Delete account</h2>
    <p>Click here to delete account.</p>
    <form
      class="delete_form"
      action="/user/delete"
      method="post"
      onsubmit="return confirm('Weet je zeker dat je je account wilt verwijderen?');"
    >
      <button type="submit">Account verwijderen</button>
    </form>
  </section>
</article>
