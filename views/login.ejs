<article class="login">
  <section class="login_form_container">
    <form action="/login" method="post">
      <h1>Log in</h1>
      <label for="username">Username</label>
      <input class="input_box" type="text" id="username" name="username" />
      <label for="password">Password</label>
      <input class="input_box" type="password" id="password" name="password" />

      <div class="account_success"><%- successMessage %></div>
      <div class="account_fail"><%- loginFailed %></div>

      <button class="btn" type="submit">Log in</button>

      <a href="/register">Register here!</a>
    </form>
  </section>
</article>
